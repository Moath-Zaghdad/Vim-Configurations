priority -50

# MY OWN 

snippet log "console log"
console.log("${1:Message}");
endsnippet

snippet vreq "assign a CommonJS-style module to a var"
var ${2:${1/(.+\/)*(\w+)(-|\b|$)(\..+$)?/\u$2/g}} = require('$1');
endsnippet

snippet creq "assign a CommonJS-style module to a const"
const ${2:${1/(.+\/)*(\w+)(-|\b|$)(\..+$)?/\u$2/g}} = require('$1');
endsnippet

snippet var "define a var"
var $1 = $2;
endsnippet



